<div class="container" style="margin-top: 120px; margin-bottom: 60px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p style="text-align: right;">
                <span>Hola {{usuario}}!!</span>
                <a href="/admin/login/logout" class="btn btn-secondary"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
            </p>
        </div>
    </div>

    {{!-- fila 2 --}}
    <div class="row" style="margin-top:10px;">
        <div class="col-7" style="margin-top:-3px;">
            <h2>Lista de Servicios</h2>
        </div>
        <div class="col-5" style="text-align: right;">
            <a href="" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>

    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            {{!-- tabla --}}
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" style="text-align: right; padding-right: 20px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each servicios}}{{!-- https://handlebarsjs.com/guide/builtin-helpers.html#unless --}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td style="text-align: right;">
                            <a href="" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/servicios/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>